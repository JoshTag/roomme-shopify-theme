{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero" style="background-image: url({{ section.settings.hero_image | img_url: '2200x' }});">
  <div>
    <h1 class="hero__h1">{{ section.settings.title }}</h1>
    <p class="hero__p">{{ section.settings.subheader }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subheader",
      "label": "Subheader"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
